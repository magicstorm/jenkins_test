<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    >
    <LinearLayout
        android:id="@+id/menu_frame"
        android:layout_width="@dimen/sender_side_bar_width"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:orientation="vertical"
        android:clickable="true"
        >

        <LinearLayout
            android:id="@+id/menu"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            >
            <LinearLayout
                android:id="@+id/clear_btn"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:clickable="true"
                android:layout_weight="1"
                android:gravity="center"
                >
                <ImageView
                    style="@style/sideBarIconImage"
                    android:src="@drawable/btn_clear"
                    />
                <TextView
                    style="@style/sideBarIconText"
                    android:text="清屏"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/undo_btn"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="center"
                >
                <ImageView
                    style="@style/sideBarIconImage"
                    android:src="@drawable/btn_undo"
                    />
                <TextView
                    style="@style/sideBarIconText"
                    android:text="撤销"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/hand_btn"
                android:layout_width="match_parent"
                android:clickable="true"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="center"
                >
                <ImageView
                    style="@style/sideBarIconImage"
                    android:src="@drawable/btn_hand"
                    />
                <TextView
                    style="@style/sideBarIconText"
                    android:text="拖动"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/draw_type_btn"
                android:layout_width="match_parent"
                android:clickable="true"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="center"
                >
                <ImageView
                    style="@style/sideBarIconImage"
                    android:src="@drawable/btn_shape"
                    />
                <TextView
                    style="@style/sideBarIconText"
                    android:text="画笔"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/color_btn"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="center"
                >
                <ImageView
                    style="@style/sideBarIconImage"
                    android:src="@drawable/btn_color"
                    />
                <TextView
                    style="@style/sideBarIconText"
                    android:text="颜色"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/stroke_width_btn"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="center"
                >
                <ImageView
                    style="@style/sideBarIconImage"
                    android:src="@drawable/btn_width"
                    />
                <TextView
                    style="@style/sideBarIconText"
                    android:text="粗细"
                    />
            </LinearLayout>
        </LinearLayout>



    </LinearLayout>

    <View
        android:id="@+id/split_left"
        android:layout_width="1dp"
        android:layout_toRightOf="@id/menu_frame"
        android:background="#999999"
        android:layout_height="match_parent"
        />

    <com.hgxx.whiteboard.views.HgScrollView
        android:layout_toRightOf="@id/split_left"
        android:id="@+id/sv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fillViewport="true"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">




            <LinearLayout
                android:id="@+id/doc_ll"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </LinearLayout>
            <com.hgxx.whiteboard.views.drawview.DrawLayout
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_alignLeft="@id/doc_ll"
                android:layout_alignTop="@id/doc_ll"
                android:layout_alignRight="@id/doc_ll"
                android:layout_alignBottom="@id/doc_ll"
                android:clickable="true"
                android:id="@+id/draw_sender_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </com.hgxx.whiteboard.views.drawview.DrawLayout>
        </RelativeLayout>


    </com.hgxx.whiteboard.views.HgScrollView>

    <RelativeLayout
        android:layout_toRightOf="@id/menu_frame"
        android:id="@+id/top_bar_rl"
        android:layout_width="match_parent"
        android:background="#c48f8f8f"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/top_folder_iv"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_width="30dp"
            android:src="@drawable/btn_file"
            android:scaleType="fitCenter"
            android:layout_height="wrap_content" />

        <FrameLayout
            android:id="@+id/top_right_rl"
            android:layout_alignParentRight="true"
            android:layout_width="60dp"
            android:layout_height="match_parent">
        </FrameLayout>

        <TextView
            android:id="@+id/top_title"
            android:layout_toLeftOf="@id/top_right_rl"
            android:layout_toRightOf="@id/top_folder_iv"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="match_parent"
            android:text="高中三年级英语提高班"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:textSize="20sp"
            />
    </RelativeLayout>


    <com.hgxx.whiteboard.views.menu.ColorPanel
        android:id="@+id/color_panel"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        android:layout_width="500dp"
        android:background="#cc999999"
        android:padding="8dp"
        android:layout_centerHorizontal="true"
        android:layout_height="56dp">
    </com.hgxx.whiteboard.views.menu.ColorPanel>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        android:id="@+id/width_panel"
        android:background="#f21717"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/stroke_width_1"
            style="@style/whiteBoardStrokeWidthText"
            android:text="1点"
            />
        <TextView
            android:id="@+id/stroke_width_5"
            style="@style/whiteBoardStrokeWidthText"
            android:text="5点"
            />
        <TextView
            android:id="@+id/stroke_width_10"
            style="@style/whiteBoardStrokeWidthText"
            android:text="10点"
            />
        <TextView
            android:id="@+id/stroke_width_15"
            style="@style/whiteBoardStrokeWidthText"
            android:text="15点"
            />
        <TextView
            android:id="@+id/stroke_width_20"
            style="@style/whiteBoardStrokeWidthText"
            android:text="20点"
            />
        <TextView
            android:id="@+id/stroke_width_25"
            style="@style/whiteBoardStrokeWidthText"
            android:text="25点"
            />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:id="@+id/shape_panel"
        android:background="#f21717"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/shape_line_btn"
            style="@style/whiteBoardStrokeWidthText"
            android:clickable="true"
            android:tag="line"
            android:text="线条"
            />
        <TextView
            android:id="@+id/shape_oval_btn"
            style="@style/whiteBoardStrokeWidthText"
            android:clickable="true"
            android:tag="oval"
            android:text="椭圆"
            />
        <TextView
            android:id="@+id/shape_rect_btn"
            style="@style/whiteBoardStrokeWidthText"
            android:clickable="true"
            android:tag="rect"
            android:text="长方形"
            />

            />
    </LinearLayout>


</RelativeLayout>

