<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="DrawView">
        <attr name="needCircle" format="boolean"/>
        <attr name="paintWidth" format="dimension"/>
        <attr name="paintColor" format="string"/>
        <attr name="drawable" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="WhiteBoard" >
        <attr name="serverSocketAddress" format="string"/>
        <attr name="serverSocketPort" format="integer"/>
        <attr name="serverSocketProtocol" format="string"/>
        <attr name="customSocketServer" format="boolean"/>
        <attr name="customWebServer" format="boolean"/>
        <attr name="serverWebAddress" format="string"/>
        <attr name="serverWebPort" format="integer"/>
        <attr name="serverWebProtocol" format="string"/>
    </declare-styleable>

    <declare-styleable name="HgWhiteBoard">
        <attr name="serverWebAddress"/>
        <attr name="serverWebPort"/>
        <attr name="serverWebProtocol"/>
        <attr name="serverSocketAddress" />
        <attr name="serverSocketPort"/>
        <attr name="serverSocketProtocol"/>
        <attr name="customSocketServer" />
        <attr name="customWebServer" />
    </declare-styleable>

    <declare-styleable name="HgWhiteBoardRcv">
        <attr name="serverWebAddress"/>
        <attr name="serverWebPort"/>
        <attr name="serverWebProtocol"/>
        <attr name="serverSocketAddress" />
        <attr name="serverSocketPort" />
        <attr name="serverSocketProtocol" />
        <attr name="customSocketServer" />
        <attr name="customWebServer"/>
    </declare-styleable>


    <declare-styleable name="PopoutMenu">
        <attr name="anchor" format="reference"/>
        <attr name="anchorChild" format="reference"/>
        <attr name="menuCornerRadius" format="dimension"/>
        <attr name="animationDirection" format="integer">
            <flag name="left" value="1"/>
            <flag name="right" value="2"/>
            <flag name="up" value="3"/>
            <flag name="down" value="4"/>
        </attr>
        <attr name="animationDistance" format="dimension"/>
        <attr name="menuElevation" format="dimension"/>
        <attr name="anchorDirectioon" format="integer">
            <flag name="vertical" value="1"/>
            <flag name="horizontal" value="2"/>
        </attr>
        <attr name="stayTop" format="boolean"/>
        <attr name="addAnchorListener" format="boolean"/>
        <attr name="adjustSize" format="boolean"/>
    </declare-styleable>


    <declare-styleable name="ShadowLinearLayout">
        <attr name="elevationSize" format="dimension"/>
        <attr name="elevationPos" format="integer">
            <flag name="left" value="1"/>
            <flag name="right" value="2"/>
            <flag name="top" value="3"/>
            <flag name="bottom" value="4"/>
        </attr>

    </declare-styleable>

    <declare-styleable name="ColorPointer">
        <attr name="radius" format="dimension"/>
    </declare-styleable>


</resources>